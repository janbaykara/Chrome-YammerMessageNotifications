{
  "manifest_version": 2,

  "name": "Yammer Desktop Notifications",
  "description": "Desktop notifications for new Yammer messages",
  "version": "1.0.1",
  
  "background": {
    "scripts": [
      "lodash.js", 
      "jquery.js",
      "background.js"
    ],
    "persistent": true
  },

  "permissions": [
    "storage",
    "webRequest",
    "activeTab",
    "tabs",
    "notifications",
    "<all_urls>"
  ]
}