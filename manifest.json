{
  "manifest_version": 2,
  "name": "Desktop Notifier",
  "short_name": "Notifier",
  "description": "Desktop Notifier provides desktop notifications when you receive new private Yammer chat messages. This is a third party extension.",
  "version": "1.2.5",
  "author": "Jan Baykara <jan@baykara.co.uk>",
  "homepage_url": "https://github.com/janbaykara/Yammer-Desktop-Notifications",
  "icons": {
    "128": "img/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "img/icon128.png"
    },
    "default_title": "Toggle msg notifications"
  },
  "background": {
    "scripts": [
      "deps/lodash.js",
      "deps/jquery.js",
      "lib/Session.js",
      "lib/background.config.js",
      "lib/background.detectors.js",
      "lib/background.messenger.js",
      "lib/background.init.js",
      "lib/background.ui.js"
    ],
    "persistent": true
  },
  "permissions": [
    "storage",
    "webRequest",
    "activeTab",
    "tabs",
    "notifications",
    "<all_urls>"
  ]
}